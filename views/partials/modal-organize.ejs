<div class="modal fade" id="org-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
aria-hidden="true">
<div class="modal-dialog modal-dialog-centered" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title" id="exampleModalLongTitle">Welcome Organizers</h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <form action="/orglogin" method="post" >
        <div class="form-group">
          <label for="org-username">Username</label>
          <input name="orgname" type="text" class="form-control" id="org-username" aria-describedby="Username"
            placeholder="Enter Username">
          
        
        <div class="form-group">
          <label for="org-password">Password</label>

          <input name="password" type="password" class="form-control" id="org-pass-in" placeholder="Password">
          
          <button type="button" class="col-2 btn btn-light" id="org-pass-btn">Show</button>

        </div>

        <button type="submit" class="btn btn-primary" id="org-submit" data-toggle="modal" data-target="#invalid">Submit</button>
      </div>
      </form>
      <button type="button" class="btn btn-link" id="fgp" >forget password</button>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
    </div>
    
  </div>
</div>
</div>

<script>
  var pass1 = document.getElementById("org-pass-in");
  var orgButton1 = document.getElementById("org-pass-btn");

  orgButton1.addEventListener("click", function() {

    if (pass1.type == "password") {
      pass1.setAttribute("type" , "text");
      orgButton1.textContent = "Hide";
      
    } else {
      pass1.setAttribute("type" ,"password");
      orgButton1.textContent = "Show";
    }
  });

  var forpass = document.getElementById("fgp");
  forpass.addEventListener("click",function(){
    window.location.href = "/fgporg";
  });
</script>


